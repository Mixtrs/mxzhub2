local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

local Window = Rayfield:CreateWindow({
    Name = "Walk Speed Toggle",
    LoadingTitle = "Loading Walk Speed Script",
    LoadingSubtitle = "by YourName",
    ConfigurationSaving = {
        Enabled = true,
        FolderName = "RayfieldScripts",
        FileName = "WalkSpeedToggle"
    },
    KeySystem = false, -- Set to true to require a key
})

local Tab = Window:CreateTab("Main", 4483362458) -- Change the icon to match your preference
local Section = Tab:CreateSection("Walk Speed Control")

Tab:CreateToggle({
    Name = "Toggle Walk Speed",
    CurrentValue = false,
    Flag = "WalkSpeedToggle", -- A unique identifier
    Callback = function(Value)
        local player = game.Players.LocalPlayer
        if player and player.Character and player.Character:FindFirstChild("Humanoid") then
            local humanoid = player.Character:FindFirstChild("Humanoid")
            if Value then
                humanoid.WalkSpeed = 50 -- Speed when toggle is on
            else
                humanoid.WalkSpeed = 16 -- Speed when toggle is off
            end
        end
    end,
})

Rayfield:Notify({
    Title = "Script Loaded",
    Content = "Toggle the walk speed using the UI.",
    Duration = 5,
    Image = 4483362458,
})
