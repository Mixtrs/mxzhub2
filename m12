local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

local Window = Rayfield:CreateWindow({
    Name = "Walk Speed Toggle",
    LoadingTitle = "Loading Walk Speed Script",
    LoadingSubtitle = "by YourName",
    ConfigurationSaving = {
        Enabled = true,
        FolderName = "RayfieldScripts",
        FileName = "WalkSpeedToggle"
    },
    KeySystem = false,
})

local Tab = Window:CreateTab("Main", 4483362458)
local Section = Tab:CreateSection("Walk Speed Control")

local toggleEnabled = false
local walkSpeedTarget = 16 -- Default speed

Tab:CreateToggle({
    Name = "Toggle Walk Speed",
    CurrentValue = false,
    Flag = "WalkSpeedToggle",
    Callback = function(Value)
        toggleEnabled = Value
        walkSpeedTarget = Value and 50 or 16
    end,
})

Rayfield:Notify({
    Title = "Script Loaded",
    Content = "Toggle the walk speed using the UI.",
    Duration = 5,
    Image = 4483362458,
})

-- Forcefully adjust the player's walk speed continuously
task.spawn(function()
    while task.wait(0.1) do
        local player = game.Players.LocalPlayer
        if player and player.Character and player.Character:FindFirstChild("Humanoid") then
            local humanoid = player.Character:FindFirstChild("Humanoid")
            if humanoid.WalkSpeed ~= walkSpeedTarget then
                humanoid.WalkSpeed = walkSpeedTarget
            end
        end
    end
end)
