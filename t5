local Rayfield = loadstring(game:HttpGet('https://raw.githubusercontent.com/shlexware/Rayfield/main/source'))()

local Window = Rayfield:CreateWindow({
    Name = "Speed Gradual Increase",
    LoadingTitle = "Rayfield UI Library",
    LoadingSubtitle = "Example Script",
    ConfigurationSaving = {
        Enabled = true,
        FolderName = nil, -- Create a folder in Workspace
        FileName = "SpeedScript"
    }
})

local MainTab = Window:CreateTab("Main", 4483362458) -- Tab Icon (optional)

local GradualSpeedEnabled = false
local SpeedAmount = 16 -- Default walk speed

MainTab:CreateToggle({
    Name = "Enable Gradual Speed",
    CurrentValue = false,
    Flag = "GradualSpeedToggle",
    Callback = function(Value)
        GradualSpeedEnabled = Value
    end,
})

MainTab:CreateSlider({
    Name = "Speed Increase Rate",
    Range = {1, 10},
    Increment = 1,
    Suffix = "Rate",
    CurrentValue = 3,
    Flag = "SpeedIncreaseRate",
    Callback = function(Value)
        SpeedIncreaseRate = Value
    end,
})

local SpeedIncreaseRate = 3 -- Default speed increase rate
local Player = game.Players.LocalPlayer
local Character = Player.Character or Player.CharacterAdded:Wait()
local Humanoid = Character:WaitForChild("Humanoid")

game:GetService("RunService").RenderStepped:Connect(function()
    if GradualSpeedEnabled and Humanoid then
        local UserInputService = game:GetService("UserInputService")
        if UserInputService:IsKeyDown(Enum.KeyCode.LeftShift) or UserInputService:IsKeyDown(Enum.KeyCode.ButtonR2) then
            SpeedAmount = math.clamp(SpeedAmount + SpeedIncreaseRate * 0.1, 16, 100) -- Gradual speed increase
            Humanoid.WalkSpeed = SpeedAmount
        else
            SpeedAmount = 16 -- Reset to default walk speed
            Humanoid.WalkSpeed = SpeedAmount
        end
    end
end)
